Config { font		= "xft:Source Han Serif SC:pixelsize=18:antialias=true:hinting=true"
       , additionalFonts= [ "xft:Source Han Serif SC:pixelsize=13" ]
       , bgColor        = "#282c34"
       , fgColor        = "#ff6c6b"
       , position 	= Top
       , lowerOnStart 	= True
       , hideOnStart 	= False
       , allDesktops 	= True
       , persistent 	= True
       , iconRoot 	= "/home/keke/.xmonad/xpm/"  -- default: "."
       , commands 	= [ Run Date "%a, %b %d %Y, %H:%M:%S" "date" 10
                          , Run Network "wlp1s0" ["-t", "<icon=network_rx_8.xpm/> <rx>kb <icon=network_tx_8.xpm/> <tx>kb"] 20
                          , Run Cpu ["-t", "<icon=cpu_20.xpm/>U: <total>%","-H","50","--high","red"] 20
                          , Run Memory ["-t", "<icon=memory-icon_20.xpm/><used>M (<usedratio>%)"] 20
--                          , Run DiskU [("/", "<icon=harddisk-icon_20.xpm/><free> free")] [] 60
                          , Run Battery [
	                      "-t", "<acstatus> <left>%"
	                      , "--"
	                      , "-i", "<icon=battery-plug-icon_24.xpm/>"                              
	                      , "-O", "<icon=battery-plug-icon_24.xpm/>"
	                      , "-o", "<icon=battery-full-icon_24.xpm/>"
	                      ] 10
                          , Run Com "/home/keke/.xmonad/trayer-padding-icon.sh" [] "trayerpad" 10
                          , Run Com "uname" ["-r"] "" 3600
                          , Run UnsafeStdinReader
                          ]
	                  , sepChar = "%"
	                  , alignSep = "}{"
                          , template = " <icon=haskell_20.xpm/> <fc=#666666>|</fc> %UnsafeStdinReader% }{ <fc=#FFB86C>%cpu%</fc><fc=#666666> |</fc> <fc=#FF5555>%memory%</fc><fc=#666666> | </fc><fc=#b3afc2><icon=linux.xpm/></fc> %uname% <fc=#666666>|</fc> <fc=#c3e88d>%wlp1s0%</fc><fc=#666666> |</fc><fc=#E052BA>%battery%</fc><fc=#666666> |</fc> <icon=calendar-clock-icon_24.xpm/> <fc=#8BE9FD>%date%</fc><fc=#666666> |</fc>%trayerpad%"
